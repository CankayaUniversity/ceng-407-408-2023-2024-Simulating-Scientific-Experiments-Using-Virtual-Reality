<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:elevation="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vrlogo"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/vrlogo" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoContainer"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"

        android:paddingStart="26dp"
        android:paddingEnd="26dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />


        <EditText
            android:id="@+id/Regusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_border"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="10dp"
            android:elevation="6dp"
            android:hint=" Username"
            android:inputType="text"
            android:paddingStart="10dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/RegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_border"
            android:drawableLeft="@drawable/mailbox"
            android:drawablePadding="10dp"
            android:elevation="6dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/RegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_border"
            android:drawableLeft="@drawable/password"
            android:drawableRight="@drawable/passwordvisible"
            android:drawablePadding="10dp"
            android:elevation="6dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="10dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButton"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:text="RegÄ±ster"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:background="@drawable/button_background"
            app:cornerRadius="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            tools:context=".ui.RegisterFragment">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:hint="Already have an account ?  "
                android:textColorHint="#181818"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="5dp"
                android:text="Login"
                android:textColor="#8122CB"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>