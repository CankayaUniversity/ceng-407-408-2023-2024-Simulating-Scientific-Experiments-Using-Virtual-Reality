<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgrounquestion"
    tools:context=".ui.quizUi.QuizFragment"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/circle"
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:layout_gravity="top"
            android:scaleType="centerCrop"
            android:src="@drawable/elips" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Classes"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />
    </FrameLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Lütfen sınıfınızı seçin"
        android:textColor="#A6322C2C"
        android:textSize="20sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/class5button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Class 5"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/gradient_button"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginBottom="30dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/class6button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Class 6"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/gradient_button"
            android:layout_marginBottom="30dp"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/class7button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Class 7"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/gradient_button" />



    </LinearLayout>



</LinearLayout>

</ScrollView>
